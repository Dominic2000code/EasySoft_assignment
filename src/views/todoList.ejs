
<!DOCTYPE html>
<html>
    <head>
        <!--Import Google Icon Font-->
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <!--Import materialize.css-->
        <link type="text/css" rel="stylesheet" href="css/materialize.min.css"  media="screen,projection"/>
        <title><%= title %> </title>
        <!--Let browser know website is optimized for mobile-->
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        </head>

        <nav>
            <div class="nav-wrapper grey">
                <a href="#" class="brand-logo">EasySoft</a>
                <ul id="nav-mobile" class="right hide-on-med-and-down">
                <li><a href="/">Home</a></li>
                <li><a href="">Todo List</a></li>
            </ul>
            </div>
        </nav>

        <div class="container">
            <h1>Todo List</h1>
            <a href="/new" class="btn blue">New Todo</a>

            
            <div class="container">
                <a href="/get-data" class="btn">Load todo</a>
            </div>
            <% resultArray.forEach((i)=>{ %> 
            <div class="row">
                
                <div class="col s12 m6">
                    <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                        <!-- <span class="card-title">Card Title</span> -->
                        <p><strong>Employee ID: </strong> <%= i.employeeID %> </p>
                        <p><strong>Employee Name: </strong> <%= i.name %> </p>
                        <p><strong>Todo: </strong> <%= i.todos %> </p>
                    </div>
                    <div class="card-action">
                        <a href="/" class="btn blue">Back</a>
                        <a href="#" class="btn red">Delete</a>
                    </div>
                </div>
                </div>
            </div>
            <% }) %> 
            
        </div>
        

        
        <body>

        <!--JavaScript at end of body for optimized loading-->
        <script type="text/javascript" src="js/materialize.min.js"></script>
        <script src="/js/jquery.min.js"></script>
    </body>
</html>
